<h1>Create a new review:</h1>
<br>
<%= simple_form_for ([@restaurant,@review]) do |f| %>
  <%= f.error_notification %>
  <%= f.input :content %>
  <%= f.input :rating,
    collection: [
      "0",
      "1",
      "2",
      "3",
      "4",
      "5"] %>
  <%= f.button :submit, class: "btn-primary" %>
<% end %>
<%= link_to "Back to the list", restaurants_path  %>
